<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <PublishAot>false</PublishAot>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <EnableMixedModeDebugging>true</EnableMixedModeDebugging>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Box2D.NetStandard" Version="2.4.7-alpha" />
        <PackageReference Include="CSharpFunctionalExtensions" Version="3.6.0" />
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.14.0" />
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Scripting" Version="4.14.0" />
        <PackageReference Include="NLog" Version="6.0.3" />
        <PackageReference Include="NLog.Extensions.Logging" Version="6.0.3" />
        <PackageReference Include="Silk.NET.Assimp" Version="2.22.0" />
        <PackageReference Include="Silk.NET.Input" Version="2.22.0" />
        <PackageReference Include="Silk.NET.OpenAL" Version="2.22.0" />
        <PackageReference Include="Silk.NET.OpenGL" Version="2.22.0" />
        <PackageReference Include="Silk.NET.OpenGL.Extensions.ImGui" Version="2.22.0" />
        <PackageReference Include="Silk.NET.Windowing" Version="2.22.0" />
        <PackageReference Include="StbImageSharp" Version="2.30.15" />
        <PackageReference Include="ZLinq" Version="1.5.2" />
    </ItemGroup>

    <ItemGroup>
        <!-- Plik konfiguracyjny NLog zawsze kopiowany -->
        <None Update="nlog.config" CopyToOutputDirectory="Always" />

        <!-- Kopiowanie wszystkich shaderÃ³w OpenGL -->
        <None Include="Platform/OpenGL/Shaders/**/*.*" CopyToOutputDirectory="PreserveNewest" />

        <!-- Kopiowanie wszystkich shaderÃ³w ImGui -->
        <None Include="ImGui/Shaders/**/*.*" CopyToOutputDirectory="PreserveNewest" />
    </ItemGroup>

    <ItemGroup>
        <!-- Biblioteka natywna -->
        <Content Include="bin/Debug/net8.0/runtimes/osx-arm64/native/cimgui.dylib" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="../ECS/ECS.csproj" />
    </ItemGroup>

    <Target Name="EnsureOutputFolders" BeforeTargets="Build">
        <ItemGroup>
            <AssetDirs Include="assets/**/" />
        </ItemGroup>
        <MakeDir Directories="@(AssetDirs->'$(OutputPath)%(RecursiveDir)')" />
    </Target>

</Project>
