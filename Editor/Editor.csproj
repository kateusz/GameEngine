<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <EnableMixedModeDebugging>true</EnableMixedModeDebugging>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="../Engine/Engine.csproj" />
    </ItemGroup>

    <ItemGroup>
        <!-- Zawsze kopiuj imgui.ini -->
        <None Update="imgui.ini" CopyToOutputDirectory="Always" />

        <!-- Kopiuj rekurencyjnie wszystko z assets i Resources -->
        <None Include="assets\**\*.*" CopyToOutputDirectory="PreserveNewest" />
        <None Include="Resources\**\*.*" CopyToOutputDirectory="PreserveNewest" />
        <None Include="libs\**\*.*" CopyToOutputDirectory="PreserveNewest" />
    </ItemGroup>

    <ItemGroup>
        <!-- Specjalny plik z Content -->
        <Content Include="bin/Debug/net8.0/assets/scenes/Physics2D.scene" />
    </ItemGroup>

    <ItemGroup>
        <!-- Jeśli chcesz, żeby skrypty .cs2 też były kopiowane -->
        <None Include="assets\scripts\**\*.cs2" CopyToOutputDirectory="PreserveNewest" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="DryIoc" Version="5.4.3" />
    </ItemGroup>

</Project>
